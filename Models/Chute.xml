<PropertyList>

  <path>ramair_chute.ac</path>
  <offsets>
    <heading-deg>90</heading-deg>
    <pitch-deg>90</pitch-deg>
    <roll-deg>90</roll-deg>
  </offsets>

  <animation>
    <object-name>pilot_chute</object-name>
    <object-name>ropes</object-name>
    <type>select</type>
    <condition>
     <greater-than>
      <property>fdm/jsbsim/systems/chute/chute-reef-pos-norm</property>
      <value>0.92</value>
     </greater-than>
    </condition>
  </animation>

  <animation>
    <object-name>canopy</object-name>
    <type>select</type>
    <condition>
     <greater-than>
      <property>fdm/jsbsim/systems/chute/chute-reef-pos-norm</property>
      <value>0.075</value>
     </greater-than>
    </condition>
  </animation>

  <animation>
    <object-name>canopy</object-name>
    <object-name>ropes</object-name>
    <type>scale</type>
    <property>fdm/jsbsim/systems/chute/chute-reef-pos-norm</property>
  </animation>

  <animation>
    <object-name>pilot_chute</object-name>
    <object-name>canopy</object-name>
    <object-name>ropes</object-name>
    <type>rotate</type>
    <property>fdm/jsbsim/systems/chute/chute-reef-pos-norm</property>
    <factor>-60</factor>
    <offset-deg>60</offset-deg>
    <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
  </animation>

  <animation>
    <object-name>pilot_chute</object-name>
    <type>rotate</type>
    <property>fdm/jsbsim/aero/alpha-deg</property>
    <center>
     <z-m>6.254</z-m>
    </center>
    <axis>
     <x>0</x>
     <y>-1</y>
     <z>0</z>
   </axis>
  </animation>

  <animation>
    <object-name>pilot_chute</object-name>
    <type>rotate</type>
    <property>fdm/jsbsim/aero/beta-deg</property>
    <axis>
     <x>0</x>
     <y>0</y>
     <z>-1</z>
   </axis>
  </animation>



</PropertyList>
