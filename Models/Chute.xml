<PropertyList>

  <path>ramair_chute.ac</path>
  <offsets>
    <heading-deg>90</heading-deg>
    <pitch-deg>90</pitch-deg>
    <roll-deg>0</roll-deg>
  </offsets>

  <effect>
    <inherits-from>Aircraft/Parachutist/Models/Effects/wingflexR</inherits-from>
    <object-name>seg12</object-name>
    <object-name>seg34</object-name>
    <object-name>seg56</object-name>
    <object-name>skirt_r</object-name>
    <object-name>chords_r</object-name>
    <object-name>control_r</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/Parachutist/Models/Effects/wingflexL</inherits-from>
<object-name>seg78</object-name>
<object-name>chords_c</object-name>
    <object-name>seg910</object-name>
    <object-name>seg1112</object-name>
    <object-name>seg1314</object-name>
    <object-name>skirt_l</object-name>
    <object-name>chords_l</object-name>
    <object-name>control_l</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>pilot_chute_ropes</object-name>
    <object-name>ropes</object-name>
    <condition>
     <greater-than>
      <property>fdm/jsbsim/systems/chute/chute-reef-pos-norm</property>
      <value>0.52</value>
     </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>drogue_chute</object-name>
    <object-name>canopy</object-name>
    <condition>
     <greater-than>
      <property>fdm/jsbsim/systems/chute/chute-reef-pos-norm</property>
      <value>0.075</value>
     </greater-than>
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>canopy</object-name>
    <object-name>ropes</object-name>
    <property>fdm/jsbsim/systems/chute/chute-reef-pos-norm</property>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pilot_chute</object-name>
    <object-name>canopy</object-name>
    <object-name>ropes</object-name>
    <property>fdm/jsbsim/systems/chute/chute-reef-pos-norm</property>
    <factor>-60</factor>
    <offset-deg>60</offset-deg>
    <axis>
     <x>-1</x>
     <y>0</y>
     <z>0</z>
   </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>pilot_chute</object-name>
     <property>fdm/jsbsim/systems/chute/chute-reef-pos-norm</property> 
    <factor>6.254</factor>
    <offset-m>-6.254</offset-m>
    <axis>
     <x>0</x>
     <y>0</y>
     <z>1</z>
   </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>pilot_chute</object-name>
    <property>fdm/jsbsim/systems/chute/pilot-chute-pos</property>
    <factor>0.5</factor>
    <offset-m>-0.0</offset-m>
    <axis>
     <x>0</x>
     <y>0</y>
     <z>1</z>
   </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pilot_chute</object-name>
    <property>fdm/jsbsim/aero/alpha-deg</property>
    <offset-deg>-10</offset-deg>
    <center>
     <z-m>6.254</z-m>
    </center>
    <axis>
     <x>1</x>
     <y>0</y>
     <z>0</z>
   </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pilot_chute</object-name>
    <property>fdm/jsbsim/aero/beta-deg</property>
    <axis>
     <x>0</x>
     <y>0</y>
     <z>1</z>
   </axis>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>canopy</object-name>
    <object-name>ropes</object-name>
    <property>fdm/jsbsim/systems/chute/pilot-chute-pos</property>
    <x-min>1.0</x-min>
    <y-min>1.0</y-min>
    <z-min>1.0</z-min>
    <x-factor>0.5</x-factor>
    <y-factor>0.0</y-factor>
    <z-factor>1.5</z-factor>
  </animation> 

  <animation>
    <type>scale</type>
    <object-name>pilot_chute</object-name>
    <property>fdm/jsbsim/systems/chute/pilot-chute-pos</property>
    <x-min>1.0</x-min>
    <y-min>0.8</y-min>
    <z-min>1.0</z-min>
    <x-factor>1.5</x-factor>
    <y-factor>0.5</y-factor>
    <z-factor>1.5</z-factor>
    <center>
     <z-m>6.254</z-m>
    </center>
  </animation>

</PropertyList>
